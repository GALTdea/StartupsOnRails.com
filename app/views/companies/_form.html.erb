<%= form_with model: company, local: true, html: { class: 'w-full max-w-lg'}  do |form| %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label("Company Name", class:"block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2", for:"grid") %>
      <%= form.text_field(:name, class:"appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", id:"grid-first-name") %> 
      <p class="text-red-500 text-xs italic">Please fill out this field.</p>
    </div>

    <div class="w-full md:w-1/2 px-3">
      <%#= form.label(:last_name, class:"block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2", for:"grid-last-name") %>
      <%#= form.text_field(:last_name, class:"appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white",  id:"grid-first-name") %>
    </div>
  </div>

  <%# <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
        Password
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password" type="password" placeholder="******************">
      <p class="text-gray-600 text-xs italic">Make it as long and as crazy as you'd like</p>
    </div>
  </div> %>

  <%= form.hidden_field :user_id, value: '1' %>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>

    <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
      Forgot Password?
    </a>
  </div>

<% end %>

